<h3><%= @restaurant.name %> - <%= @restaurant.category %></h3>
<p><%= @restaurant.address %></p>

<h5>Reviews</h5>
<ul>
  <% @reviews.each do |review| %>
    <li><%= "#{review.content} | #{review.rating}" %></li>
  <% end %>
</ul>

<p><%= link_to "Add review", new_restaurant_review_path(@restaurant) %></p>
<p><%= link_to "Go back to restaurants", restaurants_path %></p>
